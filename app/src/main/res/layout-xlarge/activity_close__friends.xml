<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Close_Friends"
    android:background="#ced4da">

    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="BEST FRIENDS"
        android:textColor="#DA1515"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:textIsSelectable="true"
        android:textSize="70dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:elegantTextHeight="true"
        android:textAlignment="center"
        android:padding="15dp"
        android:text="Contact can be added to phone directly 3 contact are mandatory to be added"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="true"
        android:textSize="80dp"
        tools:ignore="UnusedAttribute" />


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp"
        android:layout_width="650dp"
        android:layout_height="150dp"
        android:layout_marginTop="590dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/phone1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toStartOf="@+id/addContact2"
            android:layout_toLeftOf="@+id/addContact2"
            android:inputType="phone"/>

        <Button
            android:id="@+id/addContact1"
            android:layout_width="250dp"
            android:layout_height="116dp"
            android:layout_below="@+id/addContact2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="350dp"
            android:background="@drawable/button_border"
            android:padding="10dp"
            android:text="@string/add_contact"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp"
        android:layout_width="650dp"
        android:layout_height="150dp"
        android:layout_marginTop="780dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/phone2"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toStartOf="@+id/addContact2"
            android:layout_toLeftOf="@+id/addContact2"
            android:inputType="phone"/>

        <Button
            android:id="@+id/addContact2"
            android:layout_width="250dp"
            android:layout_height="118dp"
            android:layout_below="@+id/addContact2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="350dp"
            android:background="@drawable/button_border"
            android:padding="10dp"
            android:text="@string/add_contact"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp"
        android:layout_width="650dp"
        android:layout_height="150dp"
        android:layout_marginTop="980dp"
        android:layout_centerHorizontal="true">


        <EditText
            android:id="@+id/phone3"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toStartOf="@+id/addContact2"
            android:layout_toLeftOf="@+id/addContact2"
            android:inputType="phone"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:layout_below="@+id/addContact2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="350dp"
            android:background="@drawable/button_border"
            android:padding="10dp"
            android:text="@string/add_contact"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="2000dp"
        android:layout_height="200dp"
        android:id="@+id/bottom_navigation"
        android:background="#7E7E7E"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
