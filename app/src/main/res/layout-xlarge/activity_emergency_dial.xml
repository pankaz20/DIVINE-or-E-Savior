<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Emergency_dial"
    android:background="#ced4da" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMERGENCY HELP LINE"
        android:textColor="#DA1515"
        android:layout_marginTop="40dp"
        android:textSize="90dp"
        android:textStyle="bold"
        android:textAlignment="center">

    </TextView>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_width="800dp"
        android:layout_marginTop="400dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_marginTop="27dp"
            android:text="Call Police"
            android:textSize="70dp"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:id="@+id/call_police"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginLeft="450dp"
            android:layout_above="@+id/call_ambulance"
            android:layout_alignEnd="@+id/call_ambulance"
            android:layout_alignRight="@+id/call_ambulance"
            android:layout_marginVertical="20dp"
            android:background="@drawable/button_border"
            android:padding="10dp"
            android:text="Police"
            android:textSize="40dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_width="800dp"
        android:layout_marginTop="700dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_marginTop="27dp"
            android:text="Call Ambulance"
            android:textSize="55dp"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:id="@+id/call_ambulance"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginLeft="450dp"
            android:layout_above="@+id/call_fire_brigade"
            android:layout_alignEnd="@+id/call_fire_brigade"
            android:layout_alignRight="@+id/call_fire_brigade"
            android:layout_marginVertical="20dp"
            android:text="Ambulance"
            android:textSize="40dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_border"
            android:padding="10dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_width="800dp"
        android:layout_marginTop="1000dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_marginTop="27dp"
            android:text="Call Fire Brigade"
            android:textSize="60dp"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            />
        <Button
            android:id="@+id/call_fire_brigade"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginLeft="450dp"
            android:layout_marginVertical="20dp"
            android:text="Fire Brigade"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_border"
            android:padding="10dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>