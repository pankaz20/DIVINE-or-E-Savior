<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ced4da">

    <TextView
        android:id="@+id/loc"
        android:textAlignment="center"
        android:paddingLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/capriola"
        android:text="INSTANT HELP "
        android:textColor="#FBC02D"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:gravity="center_horizontal" />


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp"
        android:layout_width="350dp"
        android:layout_marginTop="150dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        >
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:id="@+id/editText2"
            android:layout_marginTop="40dp"
            android:hint="Write Something..."
            android:fontFamily="@font/capriola"
            android:background="@drawable/edit_text_border"
            android:padding="15dp"
            />

        <Button
            android:id="@+id/send_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="125dp"
            android:layout_marginTop="115dp"
            android:fontFamily="@font/capriola"
            android:padding="10dp"
            android:text="Send"
            android:textColor="#000000"
            android:visibility="visible"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp"
        android:layout_width="350dp"
        android:layout_marginTop="390dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/loc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/capriola"
            android:text="Quick texts..."
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorLink="#000000"
            android:textIsSelectable="true"
            android:textSize="20sp" />v
        <Button
            android:id="@+id/emergency"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:text="Emergency!!!"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="#B8B5B5"
            android:visibility="visible"
            tools:visibility="visible" />


        <Button
            android:id="@+id/come_home_late"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="25dp"
            android:text="I'll come home late"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="#B8B5B5"
            android:visibility="visible"
            tools:visibility="visible" />
        <Button
            android:id="@+id/come_here_asap"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="20dp"
            android:text="Come here ASAP!!!"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:background="#B8B5B5"
            android:padding="10dp"
            android:visibility="visible"
            tools:visibility="visible" />


        <Button
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="190dp"
            android:layout_marginRight="25dp"
            android:text="Help Me!!!"
            android:background="#B8B5B5"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:visibility="visible"
            tools:visibility="visible" />


    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/emergency_dial_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="325dp"
        android:layout_marginBottom="75dp"
        android:background="#B8B5B5"
        android:padding="15dp"
        android:src="@drawable/ic_baseline_phone_forwarded_24"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="80dp"
        android:background="#B8B5B5"
        android:layout_alignParentBottom="true"
        android:elevation="20dp"
        android:text="BACKGROUND SERVICE\n TO HELP YOU "
        android:id="@+id/serviceB"
        android:layout_alignParentStart="true" />


    ,แน
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/bottom_navigation"
        android:background="#7E7E7E"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
